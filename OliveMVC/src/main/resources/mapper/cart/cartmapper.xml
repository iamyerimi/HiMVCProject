<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="www.olive.mvc.mapper.cart.CartMapper">

	<resultMap id="memberResult" type="member">
		<id property="memberNum" column="member_num" />
		<result property="memberId" column="member_id" />
		<result property="pw" column="pw" />
		<result property="memberName" column="member_name" />
		<result property="email" column="email" />
		<result property="phone" column="phone" />
		<result property="birthday" column="birthday" />
		<result property="gender" column="gender" />
		<result property="addressNumber" column="address_number" />
		<result property="addressInfo" column="address_info" />
		<result property="addressDetail" column="address_detail" />
		<result property="addressDetail2" column="address_detail2" />
		<result property="regdate" column="regdate" />
		<result property="tpa" column="tpa" />
		<result property="level" column="level" />
	</resultMap>

	<!-- 장바구니 보기 -->
	<select id="selectCartList" resultType="cart">
		select p.product_name,
		c.cart_id, c.product_id,
		p.product_price,
		c.total_product_count,
		c.total_product_price
		from product p, cart c, member m
		where
		p.product_id = c.product_id
		and
		m.member_num = c.member_num
		and
		c.member_num = #{memberNum} order by
		cart_id desc
	</select>

	<!-- 장바구니 담기 -->
	<insert id="insertInCart">
		insert into cart (member_num, product_id,
		total_product_count)
		values(#{memberNum},#{productId},#{totalProductCount})
	</insert>

	<!-- 장바구니에서 삭제~ -->
	<delete id="deleteProductInCart">
		delete from cart where cart_id = #{cartId}
	</delete>

	<!-- 장바구니 수량변경 -->
	<update id="modifyQuantity">

		update cart set total_product_count =
		#{totalProductCount}
		where cart_id = #{cartId};
	</update>

	<select id="selectOrderCart" resultType="cart">
		select * from cart
	</select>

</mapper>
  
  
  
  